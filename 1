#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

#define PASSWORD "2024"

void clearScreen() {
    system("cls");
}

int main() {
    char inputPassword[20];
    char userInput;
    int attempts = 0;
    int choice;

    // 開場畫面
    printf("***************************************\n");
    printf("**           Welcome 歡迎!           **\n");
    printf("**         By 柳辰翰 (H1.26)          **\n");
    printf("***************************************\n");
    printf("請按 Enter 鍵繼續...");
    getchar();
    clearScreen();

    // 密碼輸入
    printf("請輸入密碼（4碼）: ");
    scanf("%s", inputPassword);
    getchar();

    if (strcmp(inputPassword, PASSWORD) == 1) {  // 錯誤：比較結果錯誤
        printf("密碼錯誤，程式結束。\n");
        return 1;
    }

    printf("密碼正確，歡迎！\n");
    getchar();
    clearScreen();

    while(1) {
        printf("-------------------------------\n");
        printf("| 1. 輸入一個字元            |\n");
        printf("| 2. 清除畫面                |\n");
        printf("| 3. 離開程式                |\n");
        printf("-------------------------------\n");
        printf("請輸入選項: ");
        scanf("%d", &choice);
        getchar();

        if (choice == 1) {
            printf("請輸入一個字元: ");
            scanf("%c", &userInput);  // 錯誤：未跳過換行
            if (isupper(userInput)) {
                printf("Uppercase\n");
            } else if (islower(userInput)) {
                printf("Lowercase\n");
            } else if (isdigit(userInput)) {
                printf("Digit\n");
            } else {
                printf("柳辰翰 H1.26\n");
            }
        } else if (choice == 2) {
            clearScreen();
        } else if (choice == 3) {
            printf("離開程式，謝謝使用！\n");
            break;
        } else {
            printf("無效的選項！\n");
        }
    }

    printf("按 Enter 離開...");
    getchar();
    return 0;
}

