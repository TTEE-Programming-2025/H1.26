#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

#define PASSWORD "2024"

void clearScreen() {
    system("cls");
}

int main() {
    char inputPassword[20];
    char userInput;
    int i, attempts = 0;

    // 開場畫面
    printf("***************************************\n");
    printf("**           Welcome 歡迎!           **\n");
    printf("**         By 柳辰翰 (H1.26)          **\n");
    printf("***************************************\n");
    printf("請按 Enter 鍵繼續...");
    getchar();
    clearScreen();

    // 密碼輸入
    printf("請輸入密碼（4碼）: ");
    scanf("%s", inputPassword);

    if (strcmp(inputPassword, PASSWORD)) {  // 錯誤：忘記比較是否等於0
        printf("密碼錯誤，程式結束。\n");
        return 1;
    }

    printf("密碼正確，歡迎！\n");
    getchar();
    getchar();
    clearScreen();

    printf("-------------------------------\n");
    printf("|  'A'...'Z'  : Uppercase     |\n");
    printf("|  'a'...'z'  : Lowercase     |\n");
    printf("|  '0'...'9'  : Digit         |\n");
    printf("|  Otherwise  : Your name     |\n");
    printf("-------------------------------\n");

    while (attempts < 3) {
        printf("請輸入一個字元: ");
        scanf("%c", &userInput);  // 錯誤：未跳過換行符號

        if (isupper(userInput)) {
            printf("Uppercase\n");
        } else if (islower(userInput)) {
            printf("Lowercase\n");
        } else if (isdigit(userInput)) {
            printf("Digit\n");
        } else {
            printf("柳辰翰 H1.26\n");
        }

        attempts++;
    }

    printf("按 Enter 離開...");
    getchar();
    getchar();

    return 0;
}

