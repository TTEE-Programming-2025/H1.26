#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>

#define PASSWORD "2024"

void clearScreen() {
    system("cls"); // Windows 清螢幕
}

int main() {
    char inputPassword[20];
    char userInput;
    int choice;

    // 開場畫面
    printf("***************************************\n");
    printf("**           Welcome 歡迎!           **\n");
    printf("**         By 柳辰翰 (H1.26)          **\n");
    printf("***************************************\n");
    printf("請按 Enter 鍵繼續...");
    getchar();
    clearScreen();

    // 輸入密碼
    printf("請輸入密碼（4碼）: ");
    scanf("%19s", inputPassword);
    getchar();

    if (strcmp(inputPassword, PASSWORD) != 0) {
        printf("密碼錯誤，程式結束。\n");
        return 1;
    }

    printf("密碼正確，歡迎！\n");
    printf("請按 Enter 繼續...");
    getchar();
    clearScreen();

    // 主選單迴圈
    while (1) {
        printf("-------------------------------\n");
        printf("| 1. 輸入一個字元            |\n");
        printf("| 2. 清除畫面                |\n");
        printf("| 3. 離開程式                |\n");
        printf("-------------------------------\n");
        printf("請輸入選項: ");

        if (scanf("%d", &choice) != 1) {
            printf("輸入錯誤，請輸入數字。\n");
            while (getchar() != '\n'); // 清除緩衝區
            continue;
        }
        getchar();
    }
}
