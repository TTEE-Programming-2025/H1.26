#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <time.h>

#define ROWS 9
#define COLS 9

char seats[ROWS][COLS];

void initSeats() {
    int i, j;
    for (i = 0; i < ROWS; i++) {
        for (j = 0; j < COLS; j++) {
            seats[i][j] = '-';
        }
    }
}

void displaySeats() {
    int i, j;
    printf(" \\123456789\n");
    for (i = ROWS - 1; i >= 0; i--) {
        printf("%d", i + 1);
        for (j = 0; j < COLS; j++) {
            printf("%c", seats[i][j]);
        }
        printf("\n");
    }
}

void manualChoose(int n) {
    int i, r, c;
    for (i = 0; i < n; i++) {
        printf("Seat (row-col): ");
        scanf("%d-%d", &r, &c);
        if (seats[r][c] == '-') {
            seats[r][c] = '*';
        }
    }
    displaySeats();
}

int main() {
    initSeats();
    manualChoose(2);
    return 0;
}
