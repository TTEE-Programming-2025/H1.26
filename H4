#include <stdio.h>
#include <string.h>
#include <stdbool.h>

#define SUBJECTS 6
#define MAX 10

struct Student {
    char name[50];
    int grades[SUBJECTS];
    float avg;
};

struct Student students[MAX];
int student_count = 0;

float calculateAverage(int grades[]) {
    int sum = 0;
    for (int i = 0; i < SUBJECTS; i++) sum += grades[i];
    return sum / (float)SUBJECTS;
}

void enterGrades() {
    printf("請輸入學生人數 (1~10)：");
    scanf("%d", &student_count);
    for (int i = 0; i < student_count; i++) {
        printf("姓名：");
        scanf("%s", students[i].name);
        printf("請輸入6科成績：");
        for (int j = 0; j < SUBJECTS; j++) {
            scanf("%d", &students[i].grades[j]);
            if (students[i].grades[j] < 0 || students[i].grades[j] > 100) {
                printf("輸入錯誤，重新輸入。\n");
                i--; break;
            }
        }
        students[i].avg = calculateAverage(students[i].grades);
    }
}

void displayGrades() {
    printf("\n%-10s%-10s\n", "姓名", "平均成績");
    for (int i = 0; i < student_count; i++) {
        printf("%-10s%-10.1f\n", students[i].name, students[i].avg);
    }
}

void searchStudent() {
    char target[50];
    printf("查詢學生姓名：");
    scanf("%s", target);
    for (int i = 0; i < student_count; i++) {
        if (strcmp(students[i].name, target) == 0) {
            printf("找到：%s, 平均 %.1f\n", students[i].name, students[i].avg);
            return;
        }
    }
    printf("查無此人。\n");
}

// 排名功能
void gradeRanking() {
    struct Student temp;
    for (int i = 0; i < student_count - 1; i++) {
        for (int j = i + 1; j < student_count; j++) {
            if (students[i].avg < students[j].avg) {
                temp = students[i];
                students[i] = students[j];
                students[j] = temp;
            }
        }
    }
    displayGrades();
}

int main() {
    char choice;
    while (1) {
        printf("\na. 輸入成績\nb. 顯示成績\nc. 查詢成績\nd. 排名\ne. 離開\n");
        scanf(" %c", &choice);
        switch (choice) {
            case 'a': enterGrades(); break;
            case 'b': displayGrades(); break;
            case 'c': searchStudent(); break;
            case 'd': gradeRanking(); break;
            case 'e': return 1; 
        }
    }

    return 0;
}
